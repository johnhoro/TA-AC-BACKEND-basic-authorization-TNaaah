<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Cart</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="header">
        <img class="logo" src="/images/new.png" alt="logo" />
        <nav class="navbar">
          <a href="/client/product/list">Keep Shopping</a>
          <a href="/home"> Home</a>
          <a href="/users/logout">Logout</a>
        </nav>
      </div>
    </header>
    <main>
      <section class="user-cart">
        <div>
          <h2><span>User</span> cart</h2>
        </div>
        <div>
          <% user.cart.forEach(ele=>{ %>
          <article class="cart-item">
            <h3><%= ele.name %></h3>
            <div>
              <span> Rs. <%= ele.price %> </span>
              <a href="/client/product/<%= ele.id  %>/removeFromCart"
                >remove It</a
              >
            </div>
          </article>
          <% }) %>
          <article>
            <h3>Total</h3>
            <div>
              <span>Rs. <%= total %> </span>
              <a href="#">Checkout</a>
            </div>
          </article>
        </div>
      </section>
    </main>
  </body>
</html>
