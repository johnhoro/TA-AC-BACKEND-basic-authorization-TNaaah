<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <header>
      <div class="header">
        <img class="logo" src="/images/new.png" alt="logo" />
        <nav class="navbar">
          <a href="/admin/product/new">Add new item</a>
          <a href="/users/logout">Logout</a>
        </nav>
      </div>
    </header>
    <main>
      <section>
        <div class="dashboard">
          <h3>Welcome To Admin Dashboard</h3>
          <a href="/admin/product/list">List of all Products</a>
          <a href="/admin/product/new">Add new Product</a>
          <a href="/admin/product/list/category"> List of categories </a>
        </div>
      </section>
      <section class="user-list">
        <ul>
          <h2>List of Registered Users</h2>
          <% users.forEach(user => { %>
          <li><%= user.fullName %></li>
          <% }) %>
        </ul>
        <ul>
          <h2>List of Products</h2>
          <% products.forEach(product => { %>
          <li>
            <a href="/admin/product/details/<%= product.id  %>"
              ><%= product.name %></a
            >
          </li>
          <% }) %>
        </ul>
      </section>
    </main>
  </body>
</html>
