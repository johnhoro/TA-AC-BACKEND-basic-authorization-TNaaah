<%- include('partials/header') %>

<main>
  <section>
    <h1>Welcome <span><%= user.name %> </span> to podcast list page</h1>
  </section>
  <section>
    <div class="flex item-center podcast-btn">
      <a href="/admin/listOfPodcast">All Podcasts</a>
      <a href="/admin/listOfPodcast/myOwn">My Podcasts</a>
      <a href="/admin/listOfPodcast/verification">For Verification</a>
    </div>
    <div>
      <h2>All Podcasts</h2>
      <div class="podcast-list">
        <% podcasts.forEach(podcast=>{ %>
        <article class="podcast">
          <div class="flex item-center">
            <img src="<%= podcast.image  %>" alt="podcast img" />
          </div>
          <div>
            <h4>Title:- <span> <%= podcast.name %></span></h4>
          </div>
          <div>
            <a href="/admin/podcast/<%= podcast.id  %>">More Details</a>
          </div>
          <div>
            <h3>Verified:-<%= podcast.verified %></h3>
          </div>
        </article>
        <% }) %>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
