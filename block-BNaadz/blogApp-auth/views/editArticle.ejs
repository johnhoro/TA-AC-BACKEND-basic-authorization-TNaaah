<% include partials/header %>

<div>
  <form action="/articles/<%= article.slug %>" method="POST">
    <input
      type="text"
      name="title"
      placeholder="Add Tittle"
      value="<%= article.title %>"
    />
    <textarea name="description" placeholder="Add Content" rows="10">
<%= article.description %></textarea
    >
    <input
      type="text"
      name="tags"
      placeholder="Add Tags"
      value="<%= article.tags %>"
    />
    <button>Update Article</button>
  </form>
</div>
<% include partials/footer %>
